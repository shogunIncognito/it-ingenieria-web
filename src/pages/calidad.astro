---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Calidad - Ingenieria IT">
    <section class="w-full flex justify-center items-center py-6 space-y-2 md:py-12 lg:space-y-4">
        <div class="container flex flex-col gap-2 px-4 md:gap-4 lg:gap-8 lg:max-w-6xl">
          <div class="space-y-2 text-center">
            <h1 class="text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl">Calidad</h1>
            <p class="mx-auto max-w-[600px] text-gray-500 md:text-xl/relaxed lg:text-base/relaxed xl:text-xl/relaxed dark:text-gray-400">
